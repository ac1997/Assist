<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewRequestAcceptedDialogProfilePicture"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="?android:dialogPreferredPadding"
        android:src="@drawable/ic_user_solid"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="1.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRequestAcceptedDialogUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/textViewCurrentRequestViewProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewRequestAcceptedDialogProfilePicture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <android.support.design.button.MaterialButton
        android:id="@+id/buttonRequestDetailsViewProfile"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:text="View Profile"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewRequestAcceptedDialogProfilePicture"
        app:layout_constraintTop_toBottomOf="@+id/textViewRequestAcceptedDialogUsername"
        app:strokeColor="@color/colorAccent"
        app:strokeWidth="2dp" />

</android.support.constraint.ConstraintLayout>